<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/limitView"
        android:layout_width="110dp"
        android:layout_height="37dp"
        android:text="Limit:"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/globalAmountView"
        android:layout_width="108dp"
        android:layout_height="35dp"
        android:text="Global amount:"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <Spinner
        android:id="@+id/filterSpinner"
        android:layout_width="270dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.214" />

    <Spinner
        android:id="@+id/sortSpinner"
        android:layout_width="274dp"
        android:layout_height="58dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterSpinner"
        app:layout_constraintVertical_bias="0.283" />

    <TextView
        android:id="@+id/filerView"
        android:layout_width="77dp"
        android:layout_height="33dp"
        android:text="Filter by"
        app:layout_constraintBottom_toBottomOf="@+id/filterSpinner"
        app:layout_constraintEnd_toEndOf="@+id/filterSpinner"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="@+id/filterSpinner"
        app:layout_constraintTop_toTopOf="@+id/filterSpinner"
        app:layout_constraintVertical_bias="0.565" />

    <TextView
        android:id="@+id/sortView"
        android:layout_width="84dp"
        android:layout_height="34dp"
        android:text="Sort by"
        app:layout_constraintBottom_toBottomOf="@+id/sortSpinner"
        app:layout_constraintEnd_toEndOf="@+id/sortSpinner"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="@+id/sortSpinner"
        app:layout_constraintTop_toTopOf="@+id/sortSpinner" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="277dp"
        android:layout_height="59dp"
        app:layout_constraintBottom_toTopOf="@+id/sortSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterSpinner" />

    <ListView
        android:id="@+id/transactionList"
        android:layout_width="290dp"
        android:layout_height="248dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sortSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>